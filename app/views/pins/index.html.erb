<p id="notice"><%= notice %></p>

<div class="panel panel-default">
  <div class="panel-heading">
    <h1>Listing pins</h1>
  </div>

  <div class="panel-body">
    <table class="table table-hover">
      <thead>
        <tr>
          <th width="20%">Image</th>
          <th width="30%">Description</th>
          <th width="30%">User Email</th>
          <th colspan="3">Action</th>
        </tr>
      </thead>

      <tbody>
        <% @pins.each do |pin| %>
          <tr>
            <td><%= image_tag pin.image.url(:medium) %></td>
            <td><%= pin.description %></td>
            <td><%= pin.user.email if pin.user %></td>
            <td><%= link_to 'Show', pin %></td>
            <td><%= link_to 'Edit', edit_pin_path(pin) if pin.user == current_user %></td>
            <td><%= link_to 'Destroy', pin, method: :delete, data: { confirm: 'Are you sure?' } if pin.user == current_user  %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>

  <div class="panel-footer">      
    <%= link_to 'New Pin', new_pin_path %>
  </div>
</div>
